<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/zyp_item_selector"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <ImageView
            android:id="@+id/zypMasterIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zyp_master"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/zypMasterIv"
            android:id="@+id/zypMasterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "领队甲"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_toRightOf="@id/zypMasterTv"
            android:id="@+id/zypMoneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#999999"
            tools:text = "(需收:6387.30)"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/zypSignFlagIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zyp_no_sign_arrow"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/zypSignTv"
            android:layout_toLeftOf="@id/zypSignFlagIv"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#eb6100"
            tools:text = "合同未完成"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
</LinearLayout>