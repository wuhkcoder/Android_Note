<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ExpandableListView
        android:id="@+id/zypListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdgeLength="0dp"
        android:scrollbars="none"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/zypChatBtn"
                android:background="@drawable/zyp_orange_border_empty"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#eb6100"
                android:textSize="15sp"
                android:text="联系领队"/>
            <Button
                android:id="@+id/zypConfirmBtn"
                android:background="@drawable/zyp_blue_border_empty"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:textSize="15sp"
                android:textColor="#0dade9"
                tools:text = "确认收款:6459.70"/>
        </LinearLayout>
</LinearLayout>