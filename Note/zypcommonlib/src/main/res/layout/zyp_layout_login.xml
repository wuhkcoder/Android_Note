<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zyp_login_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zyp_logo"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <!--登录界面布局-->
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <LinearLayout
            android:id="@+id/loginView"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/zyp_login_bg_shape"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/zyp_login_phone"/>
                <EditText
                    android:id="@+id/phoneEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#7FFFFFFF"
                    android:textSize="15sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bfFFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/zyp_login_pass"/>
                <EditText
                    android:id="@+id/passEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#7FFFFFFF"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sureBtn"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignLeft="@id/loginView"
            android:layout_alignRight="@id/loginView"
            android:layout_below="@id/loginView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/zyp_sure_btn_bg"
            android:text="登录"
            />

        <TextView
            android:id="@+id/forgetTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/sureBtn"
            android:layout_below="@id/sureBtn"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:text="忘记密码?"
            android:textColor="#D8FFFfff"
            android:textSize="15sp"
            />
        <RelativeLayout
            android:id="@+id/registerLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#51ffffff">
            <TextView android:id="@+id/registerTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text="注册新用户"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/zyp_white_right_arr"/>
        </RelativeLayout>
    </RelativeLayout>
    <!--注册界面布局-->
    <RelativeLayout android:id="@+id/zypReLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/registerView"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/zyp_login_bg_shape"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/zyp_login_phone"/>
                <EditText
                    android:id="@+id/phone2Et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="18dp"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#7FFFFFFF"
                    android:textSize="15sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bfFFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/zyp_login_pass"/>
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/identifyEt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="18dp"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="textPassword"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textColorHint="#7FFFFFFF"
                        android:textSize="15sp"/>
                    <Button
                        android:id="@+id/getCodeBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:paddingRight="20dp"
                        android:text="获取验证码"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/nextBtn"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignLeft="@id/registerView"
            android:layout_alignRight="@id/registerView"
            android:layout_below="@id/registerView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/zyp_sure_btn_bg"
            android:text="下一步"
            />
        <RelativeLayout
            android:id="@+id/reBackLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#51ffffff">
            <TextView android:id="@+id/loginTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="返回登录"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/zyp_left_arr"/>
        </RelativeLayout>
    </RelativeLayout>

    <!--忘记密码-->
    <RelativeLayout android:id="@+id/setPassLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/setPassView"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/zyp_login_bg_shape"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:src="@drawable/login_phone"/>-->
                <EditText
                    android:id="@+id/setPassEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#7FFFFFFF"
                    android:textSize="15sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bfFFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/rePassEt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:background="@null"
                        android:hint="再次输入密码"
                        android:inputType="textPassword"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textColorHint="#7FFFFFFF"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/savePassBtn"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignLeft="@id/setPassView"
            android:layout_alignRight="@id/setPassView"
            android:layout_below="@id/setPassView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/zyp_sure_btn_bg"
            android:text="下一步"
            />
        <RelativeLayout
            android:id="@+id/backLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#51ffffff">
            <TextView android:id="@+id/tologinTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="返回登录"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/zyp_left_arr"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>