<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <RelativeLayout
        android:id="@+id/desLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/zyp_item_selector">
        <TextView
            android:id="@+id/timeDesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="选择您需要的日期"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"/>
        <TextView
            android:layout_toRightOf="@id/timeDesTv"
            android:id="@+id/timeSelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>
        <com.zhiyoupei.zypcommonlib.zypviews.ZypCheckBox
            android:id="@+id/allSelBtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <View
        android:id="@+id/topDivider"
        android:layout_below="@+id/desLayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"/>
    <com.zhiyoupei.zypcommonlib.calendar.ZypCalendarWidget
        android:layout_below="@+id/topDivider"
        android:id="@+id/calendarWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/timePickerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/selectLayout"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zhiyoupei.zypcommonlib.wheelview.WheelView
                android:id="@+id/yearWheel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <com.zhiyoupei.zypcommonlib.wheelview.WheelView
                android:id="@+id/monthWheel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/setLayout"
            android:layout_above="@id/selectLayout"
            android:background="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="14sp"
                android:text="年"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:text="选择年月"/>
            <TextView
                android:id="@+id/sureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="确定"/>
            <TextView
                android:layout_toLeftOf="@id/sureTv"
                android:layout_marginRight="42dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="14sp"
                android:text="月"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/remainLayout"
            android:layout_above="@id/setLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"/>
    </RelativeLayout>

</RelativeLayout>