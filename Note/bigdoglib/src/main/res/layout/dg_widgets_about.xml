<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xuan.bigdog.lib.widgets.title.DGTitleLayout
        android:id="@+id/dgAboutTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <RelativeLayout
        android:id="@+id/dgAboutBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dg_color_white">
        <ImageView
            android:id="@+id/dgAboutIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/dgAboutNameVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="TEST"
            android:textSize="16dp"
            android:textColor="#444444"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dgAboutIcon"/>
        <TextView
            android:id="@+id/dgAboutCopyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx版权所有"
            android:textSize="14dp"
            android:textColor="#444444"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_above="@+id/dgAboutCopyDetail"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/dgAboutCopyDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copyright 2012-2027"
            android:textSize="14dp"
            android:textColor="#444444"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</LinearLayout>