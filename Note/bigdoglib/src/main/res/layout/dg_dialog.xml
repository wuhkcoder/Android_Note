<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView 
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="提示"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/dg_dlg_shape_title_bg" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <TextView 
	        android:id="@+id/messageTv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="提示内容"
	        android:textColor="#666666"
	        android:minHeight="45dp"
	        android:gravity="center_vertical"
	        android:textSize="15sp"
	        android:paddingLeft="15dp"/>
	    <EditText 
	        android:id="@+id/inputEt"
	        android:layout_width="match_parent"
	        android:layout_height="36dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="10dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:background="@drawable/dg_dlg_shape_input_bg" />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dfdfdd"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button 
            android:id="@+id/leftBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="确定"
            android:textColor="#0e0e0e"
            android:textSize="17sp"
            android:background="@drawable/dg_dlg_shape_btn_left"/>
        <View 
            android:id="@+id/btnSeperator"
	        android:layout_width="0.5dp"
	        android:layout_height="match_parent"
	        android:background="#dfdfdd"/>
        <Button 
            android:id="@+id/rightBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="取消"
            android:textColor="#0e0e0e"
            android:textSize="17sp"
            android:background="@drawable/dg_dlg_shape_btn_right"/>
        <Button 
            android:id="@+id/oneBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="#0e0e0e"
            android:textSize="17sp"
            android:background="@drawable/dg_dlg_shape_btn_one"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>