<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameHead"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dg_widgets_title_bg_height"
    android:background="@color/dg_widgets_title_bg"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/returnTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:drawableLeft="@drawable/dg_widgets_title_left_icon"
        android:text="返回"
        style="@style/DgWidgetsTitleLeftTv"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="标题"
        style="@style/DgWidgetsTitleMiddleTv"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/rightTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/dg_widgets_title_bg_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        style="@style/DgWidgetsTitleRightTv"
        android:text="添加"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="visible"/>
    <LinearLayout
        android:id="@+id/rightLayout" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:visibility="visible">
    </LinearLayout>
    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>